# App runtime
NODE_ENV=development
PORT=3000

# OpenAI / AI provider
AI_PROVIDER=openai
OPENAI_API_KEY=replace-with-openai-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_CHAT_MODEL=gpt-4.1-mini

# Database (Postgres + pgvector)
DATABASE_URL=postgres://user:password@localhost:5432/cangyun
DATABASE_SSL=false

# Redis / cache
REDIS_URL=redis://localhost:6379

# Object storage (optional for media uploads)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=cangyun-media
S3_ACCESS_KEY=access-key
S3_SECRET_KEY=secret-key
S3_REGION=us-east-1

# Yuque knowledge source
YUQUE_TOKEN=replace-with-yuque-token
YUQUE_SPACE=sgyxy/cangyun
YUQUE_DOC_URLS=https://www.yuque.com/sgyxy/cangyun
YUQUE_MAX_DOCS=50
YUQUE_SCROLL_ATTEMPTS=12
YUQUE_OCR=true
YUQUE_OCR_LANG=chi_sim+eng
KNOWLEDGE_API_URL=http://localhost:3000/api/v1/knowledge/documents
KNOWLEDGE_API_TOKEN=
KNOWLEDGE_GENERATE_EMBEDDINGS=false

# Observability
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=
